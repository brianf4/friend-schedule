<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="">


    <header>
        <%- include('../partials/header'); %>
    </header>

    <main class="flex flex-col items-center">
        <h1>Sign up!</h1>

        <form class="border-2 border-black flex flex-col gap-y-4 w-2/6" action="/signup" method="post">
            <section class="flex flex-col">
                <label>Email</label>
                <input type="email" id="email" name="email" placeholder="Type here" class="input input-bordered w-full max-w-xs" required/>
            </section>
            <section class="flex flex-col">
                <label for="username">Username</label>
                <input type="text" id="name" name="name" placeholder="Type here" class="input input-bordered w-full max-w-xs" required />
            </section>
            <section class="flex flex-col">
                <label>Password</label>
                <input type="password" id="password" name="password" placeholder="Type here" class="input input-bordered w-full max-w-xs" required />
            </section>
            <button class="self-start btn btn-primary" type="submit">Sign up</button>
        </form>
    </main>

        <% if (locals.messages.errors) { %>
            <p class="text-center"> <%= messages.errors[0].msg %></p>
        <% } %>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>